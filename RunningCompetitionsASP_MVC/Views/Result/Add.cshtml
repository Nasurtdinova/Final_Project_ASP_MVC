@{
    Layout = "~/Views/Shared/_LayoutCopy.cshtml";
    ViewData["Title"] = "Result competition";
}
@model CoreFramework.Results

<div class="row justify-content-lg-center">
    <h1>Add new result competition</h1>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div class="form-group">
                <label asp-for="Command.Name" class="control-label">Command</label>
                <select asp-for="Command.Name" class=" form-control">
                    <option selected="selected">  </option>
                    @foreach (string command in CoreFramework.Connection.GetNameCommands())
                    {
                        <option>@command</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Competition.Name" class="control-label">Competition</label>
                <select asp-for="Competition.Name" class=" form-control">
                    <option selected="selected">  </option>
                    @foreach (string compet in CoreFramework.Connection.GetNameCompets())
                    {
                        <option>@compet</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Rank" class="control-label">Rank</label>
                <input asp-for="Rank" class=" form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class=" btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to results list</a>
</div>
