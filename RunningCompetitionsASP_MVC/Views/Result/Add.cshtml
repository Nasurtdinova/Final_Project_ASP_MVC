@{
    Layout = "~/Views/Shared/_LayoutCopy.cshtml";
    ViewData["Title"] = "Result competition";
}
@model CoreFramework.ResultCompetition
@using CoreFramework 
 
<div class="row justify-content-lg-center">
    <h1>Add new result competition</h1>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="idCommand" class="control-label">Command</label>
                <select asp-for="idCommand" class=" form-control">
                    <option selected="selected">  </option>
                    @foreach (var command in CoreFramework.ConnectionCommands.GetCommands().ToList())
                    {
                        <option value="@command.idCommand">@command.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="idCompetition" class="control-label">Competition</label>
                <select asp-for="idCompetition" class=" form-control">
                    <option selected="selected">  </option>
                    @foreach (var compet in CoreFramework.ConnectionCompetitions.GetCompetitions().ToList())
                    {
                        <option value="@compet.idCompetition">@compet.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Rank" class="control-label">Rank</label>
                <input asp-for="Rank" class=" form-control" />
                <span asp-validation-for="Rank"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class=" btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to results list</a>
</div>
