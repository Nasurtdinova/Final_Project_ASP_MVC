@{
    Layout = "~/Views/Shared/_LayoutCopy.cshtml";
    ViewData["Title"] = "Update result";
}
@model CoreFramework.ResultCompetition

<div class="row justify-content-lg-center">
    <h1>Update result</h1>
</div>
@using (Html.BeginForm("Update", "Result", FormMethod.Post))
{
<fieldset>
    <div asp-validation-summary="ModelOnly"></div>
    <p>
        @Html.LabelFor(m => m.idCommand, "Command")
        <br />
        <select asp-for="idCommand" class="form-control">
            <option selected="selected" value=" @Html.EditorFor(m => m.Command.Name)">  </option>
            @foreach (var command in CoreFramework.ConnectionCommands.GetCommands().ToList())
            {
                <option value="@command.idCommand">@command.Name</option>
            }
        </select>
    </p>
    <p>
        @Html.LabelFor(m => m.idCompetition, "Competition")
        <br />
        <select asp-for="idCompetition" class="form-control">
            <option selected="selected" value=" @Html.EditorFor(m => m.Competition.Name)">  </option>
            @foreach (var compet in CoreFramework.ConnectionCompetitions.GetCompetitions().ToList())
            {
                <option value="@compet.idCompetition">@compet.Name</option>
            }
        </select>
    </p>
    <p>
        @Html.LabelFor(m => m.Rank, "Rank")
        <br />
        @Html.EditorFor(m => m.Rank)
    </p>
    <p><input type="submit" value="OK" /></p>
</fieldset>
}
<div>
    <a asp-action="Index">Back to results list</a>
</div>
