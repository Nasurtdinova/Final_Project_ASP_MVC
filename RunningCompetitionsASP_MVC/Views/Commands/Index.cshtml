@{
    Layout = "~/Views/Shared/_LayoutCopy.cshtml";
    ViewData["Title"] = "Command";
}
@using System.Collections.ObjectModel;
@model ObservableCollection<CoreFramework.Command>
<h2>Commands</h2>
<div class="row justify-content-end">
    <a class="btn btn-primary" asp-controller="Commands"
       asp-action="Add" role="button">Add command</a>
</div>
<br />
<div class="row">
    @foreach (var command in Model)
    {
        <div class="col-md-4 mb-5" >
            <div class="card h-100">
                <div class="card-body">
                    <div>
                        @if (command.Image != null)
                        {
                            @Html.Raw("<img style='width:300px; height:300px;' src=\"data:image/jpeg;base64,"
                                         + Convert.ToBase64String(command.Image) + "\" />")
                        }
                        </div>
                    <div>
                        Название команды: @command.Name <br />
                        Количество человек: @command.Count <br />
                        Город: @command.City.Name <br /> <br />
                    </div>
                    <div class="text-center">
                        <a class="btn btn-danger" asp-controller="Commands"
                           asp-action="Remove" asp-route-id="@command.idCommand" role="button">
                            Remove
                        </a>
                        <a class="btn btn-primary" asp-controller="Commands"
                           asp-action="Update" asp-route-id="@command.idCommand" role="button">
                            Update
                        </a>
                        <a class="btn btn-info" asp-controller="Commands"
                           asp-action="AttachImage" asp-route-id="@command.idCommand" role="button">
                            Edit image
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
