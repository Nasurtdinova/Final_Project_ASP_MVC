@{
    Layout = "~/Views/Shared/_LayoutCopy.cshtml";
    ViewData["Title"] = "Add command";
}
@model CoreFramework.Command

<div class="row justify-content-lg-cehter">
    <h1>Add new command</h1>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Add" asp-controller="Commands" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Name" class="control-label">Name</label>
                <input asp-for="Name" class=" form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Count" class="control-label">Count people</label>
                <input asp-for="Count" class=" form-control" />
            </div>
            <div class="form-group">
                <label asp-for="City.Name" class="control-label">City</label>
                <select asp-for="City.Name" class=" form-control">
                    <option selected="selected">  </option>
                    @foreach (string city in CoreFramework.Connection.GetNameCities())
                    {
                        <option>@city</option>
                    }
                </select>
            </div>
            <legend>Добавить изображение</legend>
            <p>
                <input name="ImageData" type="file" class="form-control" />
            </p>
            <div class="form-group">
                <input type="submit" value="Add" class=" btn btn-primary" />
            </div>
        </form>
       
    </div>
</div>

<div>
    <a asp-action="Index">Back to commands list</a>
</div>

