@{
    Layout = "~/Views/Shared/_LayoutCopy.cshtml";
    ViewData["Title"] = "Update command";
}
@model CoreFramework.Command

<div class="row justify-content-lg-cehter">
    <h1>Update command</h1>
</div>
@using (Html.BeginForm("Update", "Commands", FormMethod.Post))
{
<fieldset>
    @Html.HiddenFor(m => m.idCommand)
    <p>
        @Html.LabelFor(m => m.Name, "Name")
        <br />
        @Html.EditorFor(m => m.Name)
    </p>
    <p>
        @Html.LabelFor(m => m.Count, "Count")
        <br />
        @Html.EditorFor(m => m.Count)

    </p>
    <p>
        @Html.LabelFor(m => m.ID_city, "City")
        <br />
        <select asp-for="ID_city" class="form-control">
            <option selected="selected" value="@Html.EditorFor(m => m.City.Name)">  </option>
            @foreach (var city in CoreFramework.Connection.GetCities().ToList())
            {
                <option value="@city.idCity">@city.Name</option>
            }

        </select>
    </p>
    <div class="form-group">
        <input type="submit" value="OK" class=" btn btn-primary"/>
    </div>
</fieldset>
}
<div>
    <a asp-action="Index">Back to commands list</a>
</div>
