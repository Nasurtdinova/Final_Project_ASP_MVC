@{
    ViewData["Title"] = "Command";
}
@using System.Collections.ObjectModel;
@model ObservableCollection<CoreFramework.Command>
<h2>Commands</h2>
<div class="row">
    @foreach (var command in Model)
    {
        <div class="col-md-4 mb-5">
            <div class="card h-100">
                <div class="card-body">
                    <div>
                        @Html.Raw("<img style='width:80px; height:60px;' src=\"data:image/jpeg;base64,"
                               + Convert.ToBase64String(command.Images.ImageData) + "\" />")
                    </div>

                    <div>
                        Название команды: @command.Name <br />
                        Количество человек: @command.Count <br />
                        Город: @command.City.Name@*@CoreFramework.Connection.GetCitiesId(Convert.ToInt32(command.ID_city))*@ <br /> <br />
                    </div>

                    <div class="text-center">
                        <a class="btn btn-primary" asp-controller="Commands"
                           asp-action="SportsmanCommand" asp-route-id="@command.idCommand" role="button">
                            View
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
