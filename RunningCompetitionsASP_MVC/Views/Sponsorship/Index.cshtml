@{
    Layout = "~/Views/Shared/_LayoutSponsor.cshtml";
    ViewData["Title"] = "Sponsorship";
}
@model List<CoreFramework.SponsorCommand>
<h2>My sponsorships</h2>
<div class="row justify-content-end">
    <a class="btn btn-primary" asp-controller="Sponsorship"
       asp-action="Add" role="button">Add</a>
</div>
<br />

<div class="row">
    @foreach (var sponsorship in Model)
    {
        <div class="col-md-4 mb-5">
            <div class="card h-100">
                <div class="card-body">

                    <div>
                        <p class="font-weight-normal">Name sponsor: @sponsorship.Sponsor.Name</p>
                    </div>
                    <div>
                        <p class="font-weight-normal">Name command: @sponsorship.Command.Name</p>
                    </div>
                    <div>
                        <p class="font-weight-normal">Team of the contract: @sponsorship.teamContract</p>
                    </div>
                    <div>
                        <p class="font-weight-normal">Amount: @sponsorship.amount</p>
                    </div>
                    <a class="btn btn-danger" asp-controller="Sponsorship"
                       asp-action="Remove" asp-route-id="@sponsorship.id" role="button">
                        Remove
                    </a>
                </div>
            </div>
        </div>
    }
</div>