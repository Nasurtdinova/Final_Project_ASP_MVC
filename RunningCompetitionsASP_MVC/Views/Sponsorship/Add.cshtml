@{
    Layout = "~/Views/Shared/_LayoutSponsor.cshtml";
    ViewData["Title"] = "Sponsorship";
}
@using CoreFramework
@model SponsorCommand

<div class="row justify-content-lg-center">
    <h1>Add new command for sponsorship</h1>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div class="form-group">
                <label asp-for="Command.Name" class="control-label">Command</label>
                <select asp-for="Command.Name" class=" form-control">
                    <option selected="selected">  </option>
                    @foreach (var command in CoreFramework.ConnectionCommands.GetCommands())
                    {
                        <option>@command.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Sponsor.Name" class="control-label">Name</label>
                <input asp-for="Sponsor.Name" class=" form-control" value=@CurrentUser.spon.Name />
            </div>
            <div class="form-group">
                <label asp-for="Sponsor.Surname" class="control-label">Surname</label>
                <input asp-for="Sponsor.Surname" class=" form-control" value=@CurrentUser.spon.Surname />
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label">Amount</label>
                <input asp-for="Amount" class=" form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DateBegin" class="control-label">Date begin</label>
                <input asp-for="DateBegin" class=" form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DateEnd" class="control-label">Date end</label>
                <input asp-for="DateEnd" class=" form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class=" btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to results list</a>
</div>
