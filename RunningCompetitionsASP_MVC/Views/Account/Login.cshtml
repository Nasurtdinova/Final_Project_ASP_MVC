@model RunningCompetitionsASP_MVC.ViewModels.LoginViewModel

<h3>Log in to the app</h3>
<form method="post" asp-controller="Account" asp-action="Login"
      asp-route-returnUrl="@Model.ReturnUrl">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Login"></label><br />
        <input asp-for="Login" />
        <span asp-validation-for="Login"></span>
    </div>
    <div>
        <label asp-for="Password"></label><br />
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label asp-for="RememberMe"></label><br />
        <input asp-for="RememberMe" />
    </div>
    <div>
        <input class="btn btn-info" type="submit" value="Login" />
        <a class="btn btn-primary" asp-controller="Account" asp-action="Register" role="button">Register</a>
    </div>
</form>
