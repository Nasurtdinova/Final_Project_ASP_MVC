@{
    Layout = "~/Views/Shared/_LayoutCopy.cshtml";
    ViewData["Title"] = "Sportsmans";
}
@using System.Collections.ObjectModel;
@model ObservableCollection<CoreFramework.Sportsman>
<h2>Sportsmans</h2>
<div class="row justify-content-end">
    <a class="btn btn-primary" asp-controller="Sportsmans"
       asp-action="Add" role="button">Add sportsman</a>
</div>
<br />
<div class="row">
    @foreach (var sportsman in Model)
    {
        <div class="col-md-4 mb-5">
            <div class="card h-100">
                <div class="card-body">
                    <div>
                        @if (sportsman.Image != null)
                        {
                            @Html.Raw("<img style='width:300px; height:300px;' src=\"data:image/jpeg;base64,"
                                       + Convert.ToBase64String(sportsman.Image) + "\" />")
                        }
                        </div>
                    <div>
                        Фамилия: @sportsman.Surname <br />
                        Имя: @sportsman.Name
                    </div>
                    <div class="text-center">
                        <a class="btn btn-danger" asp-controller="Sportsmans"
                           asp-action="Remove" asp-route-id="@sportsman.ID" role="button">
                            Remove
                        </a>
                        <a class="btn btn-primary" asp-controller="Sportsmans"
                           asp-action="Update" asp-route-id="@sportsman.ID" role="button">
                            Update
                        </a>
                        <a class="btn btn-info" asp-controller="Sportsmans"
                           asp-action="AttachImage" asp-route-id="@sportsman.ID" role="button">
                            Edit image
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
