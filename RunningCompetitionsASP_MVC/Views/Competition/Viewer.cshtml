@{
    ViewData["Title"] = "Competition";
}
@using System.Collections.ObjectModel;
@model ObservableCollection<CoreFramework.Competition>
<h2>Competitions</h2>
<br />
<table border="1" style="border-collapse:collapse;" width=100% cellpadding="4" cellspacing="20">
    <tr>
        <th style="text-align:center">Название соревнования</th>
        <th style="text-align:center">Место проведения</th>
        <th style="text-align:center">Улица</th>
        <th style="text-align:center">Дом</th>
        <th style="text-align:center">Город</th>
        <th style="text-align:center">Дата проведения</th>
    </tr>
    @foreach (var compet in Model)
    {
        <tr>
            <td align="center">@compet.Name</td>
            <td align="center">@compet.NameVenue</td>
            <td align="center">@compet.Street</td>
            <td align="center">@compet.Home</td>
            <td align="center">@compet.City.Name</td>
            <td align="center">@compet.Date.ToString("dd.MM.yyyy hh:mm")</td>
        </tr>
    }
</table>
