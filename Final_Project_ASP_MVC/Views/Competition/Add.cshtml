@{
    Layout = "~/Views/Shared/_LayoutCopy.cshtml";
    ViewData["Title"] = "Add competition";
}
@model Core.Competition

<div class="row justify-content-lg-center">
    <h1>Add new competition</h1>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div class="form-group">
                <label asp-for="Name" class="control-label">Name</label>
                <input asp-for="Name" class=" form-control" />
            </div>
            <div class="form-group">
                <label asp-for="NameVenue" class="control-label">Venue</label>
                <input asp-for="NameVenue" class=" form-control" />
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label">City</label>
                <select asp-for="City" class=" form-control">
                    <option selected="selected">  </option>
                    @foreach (string city in Core.Connection.GetCities())
                    {
                        <option>@city</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Street" class="control-label">Street</label>
                <input asp-for="Street" class=" form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Home" class="control-label">Home</label>
                <input asp-for="Home" class=" form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label">Date</label>
                <input asp-for="Date" class=" form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class=" btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to competitions list</a>
</div>
