@{
    ViewData["Title"] = "Sportsmans";
}
@model Final_Project_ASP_MVC.Core.SportsmanStorage
<h2>Sportsmans</h2>
<div class="row">
    @foreach (Final_Project_ASP_MVC.Core.Sportsman sportsman in Model)
    {
        <div class="col-md-4 mb-5">
            <div class="card h-100">
                <div class="card-body">
                    <div>
                        <img class="card-img-top" width="300" height="300" src="@sportsman.Image"
                             alt="@sportsman.Name" />
                    </div>
                    <div>
                        <p class="font-weight-normal">@sportsman.Surname</p>
                    </div>
                    <div>
                        <p class="font-weight-normal">@sportsman.Name</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
