<Window x:Class="RunningCompetitionWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RunningCompetitionWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition>
            </ColumnDefinition>
            <ColumnDefinition Width="*">
            </ColumnDefinition>
            <ColumnDefinition Width="2*">
            </ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition Height="5*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Background="#FFCAEAF4">
            <Menu FontSize="30" VerticalAlignment="Top" Background="#FFCAEAF4" Name="menu" Grid.RowSpan="2">
                <MenuItem Background="#FFCAEAF4" Width="100" Height="70">
                    <MenuItem.Icon>
                        <Image Source="C:\Users\nasur\source\repos\RunningCompetitions\RunningCompetitions\img\main_menu.png" Margin="-103,-41,-143,-44" />
                    </MenuItem.Icon>
                    <MenuItem Header="Competitions" FontFamily="Lucida Calligraphy" x:Name="competition" Click="competition_click"/>
                    <MenuItem Header="Competitions" FontFamily="Lucida Calligraphy" x:Name="competitionAdmin" Click="competitionAdmin_Click" Visibility="Collapsed"/>
                    <MenuItem Header="Sportsmans" FontFamily="Lucida Calligraphy" x:Name="sportsman" Click="sportsman_click"/>
                    <MenuItem Header="Commands" FontFamily="Lucida Calligraphy" x:Name="command" Click="command_click"/>
                    <MenuItem Header="Commands" FontFamily="Lucida Calligraphy" x:Name="commandAdmin" Click="commandAdmin_Click" Visibility="Collapsed"/>
                    <MenuItem Header="Result competitions" FontFamily="Lucida Calligraphy" x:Name="resultCompetition" Click="resultCompetition_Click"/>
                    <MenuItem Header="Result competitions" FontFamily="Lucida Calligraphy" x:Name="resultCompetitionAdmin" Click="resultCompetitionAdmin_Click" Visibility="Collapsed"/>
                </MenuItem>
            </Menu>
        </StackPanel>
        <Image Source="C:\Users\nasur\source\repos\RunningCompetitions\RunningCompetitions\img\image 1.jpg" Width="200" Height="55" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Grid.Column="1" Grid.ColumnSpan="2" />
        <StackPanel Grid.Row="1"  Grid.Column="3" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Left">
            <Button x:Name="registr" Content="Sign up" Click="registr_Click" Grid.Column="3" Height="45" Width="120" Grid.Row="1"/>
            <Button x:Name="login" Grid.Row="1" Content="Sign in" Click="login_Click" Grid.Column="2" Height="45" Width="120"/>
            <Button x:Name="exit" Grid.Row="1" Content="Exit" Click="exit_Click" Grid.Column="2" Height="45" Width="120" Visibility="Collapsed"/>
        </StackPanel>
        
        <Frame x:Name="frame_auto_reg" NavigationUIVisibility="Hidden" Grid.ColumnSpan="3" Background="#FFCAEAF4" Grid.Row="2" Grid.Column="1"></Frame>
    </Grid>
</Window>
